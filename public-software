<?php

function smartmail_display_software() {
    global $wpdb;
    $table_name = $wpdb->prefix . 'smartmail_software';
    $softwares = $wpdb->get_results("SELECT * FROM $table_name");

    ob_start();
    echo '<div class="smartmail-software">';
    foreach ($softwares as $software) {
        echo '<div class="software">';
        echo '<h2>' . esc_html($software->title) . '</h2>';
        echo '<p>' . esc_html($software->description) . '</p>';
        echo '<p>Price: ' . esc_html($software->price) . '</p>';
        echo '</div>';
    }
    echo '</div>';
    return ob_get_clean();
}
add_shortcode('smartmail_software_display', 'smartmail_display_software');
