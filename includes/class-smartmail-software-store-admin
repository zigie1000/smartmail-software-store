<?php

if ( ! defined( 'ABSPATH' ) ) {
    exit; // Exit if accessed directly.
}

class SmartMail_Software_Store_Admin {
    public function create_admin_menu() {
        add_menu_page(
            'SmartMail Software Store Settings',
            'Software Store',
            'manage_options',
            'smartmail-software-store',
            array( $this, 'display_settings_page' ),
            'dashicons-store',
            6
        );
    }

    public function register_settings() {
        register_setting( 'smartmail_software_store_settings_group', 'smartmail_software_store_settings' );
    }

    public function display_settings_page() {
        ?>
        <div class="wrap">
            <h1>SmartMail Software Store Settings</h1>
            <form method="post" action="options.php">
                <?php settings_fields( 'smartmail_software_store_settings_group' ); ?>
                <?php do_settings_sections( 'smartmail_software_store_settings_group' ); ?>
                <table class="form-table">
                    <tr valign="top">
                    <th scope="row">Some Setting</th>
                    <td><input type="text" name="smartmail_software_store_settings[some_setting]" value="<?php echo esc_attr( get_option('smartmail_software_store_settings')['some_setting'] ); ?>" /></td>
                    </tr>
                </table>
                <?php submit_button(); ?>
            </form>
        </div>
        <?php
    }
}
