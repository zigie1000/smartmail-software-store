<?php
if ( ! defined( 'ABSPATH' ) ) {
    exit; // Exit if accessed directly.
}

class SmartMail_Software_Store_Admin {
    public function create_admin_menu() {
        add_menu_page(
            'SmartMail Software Store',
            'Software Store',
            'manage_options',
            'smartmail-software-store',
            array($this, 'admin_page_content'),
            'dashicons-store',
            6
        );
    }

    public function admin_page_content() {
        echo '<h1>SmartMail Software Store Settings</h1>';
        echo '<form method="post" action="options.php">';
        settings_fields('smartmail-software-store-settings-group');
        do_settings_sections('smartmail-software-store-settings-group');
        submit_button();
        echo '</form>';
    }

    public function register_settings() {
        register_setting('smartmail-software-store-settings-group', 'software_store_options');
    }
}
