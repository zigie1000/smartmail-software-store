<?php

if ( ! defined( 'ABSPATH' ) ) {
    exit; // Exit if accessed directly.
}

class SmartMail_Software_Store_Admin {
    public function create_admin_menu() {
        add_menu_page(
            'SmartMail Software Store',
            'SmartMail Software Store',
            'manage_options',
            'smartmail-software-store',
            array( $this, 'admin_page_content' ),
            'dashicons-store',
            6
        );
    }

    public function register_settings() {
        register_setting( 'smartmail_software_store_options', 'smartmail_software_store_data' );
    }

    public function admin_page_content() {
        ?>
        <div class="wrap">
            <h1>SmartMail Software Store</h1>
            <form method="post" action="options.php">
                <?php
                settings_fields( 'smartmail_software_store_options' );
                do_settings_sections( 'smartmail_software_store' );
                submit_button();
                ?>
            </form>
        </div>
        <?php
    }
}
